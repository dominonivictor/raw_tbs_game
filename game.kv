#:kivy 1.11
#: include kv_files/config_screen.kv


<ScreenMaster>:
    MainMenuScreen:
    PlayerConfigScreen:
    MainGameScreen:

<MainMenuScreen>:
    main_menu_screen: 'main_menu_screen'
    name: 'main_menu_screen'
    id: 'main_menu_screen'
    BoxLayout:
        orientation: 'vertical'
        Button:
            size_hint_y: 50
            id: 'main_menu_btn'
            text: "Go to the Game!"
            font_size: 50
            on_release: root.start_game()
        Button:
            size_hint_y: 50
            id: 'config_screen_btn'
            text: 'Go to Config Screen'
            font_size: 50
            on_release: root.config()



<PuzzleTile@ButtonBehavior+Label>
    size_hint: None, None
    size: "45dp", "45dp"
    original_color: (1, 1, 1, .2)
    canvas.before:
        Color:
            rgba: self.rgba
        Rectangle:
            pos: self.pos
            size: self.size
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<ScrollableLog>:
    Label:
        text: root.text
        font_size: 20
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        halign: 'center'
        canvas.before:
            Color:
                rgba: (25/255, 100/255, 126/255, 0.8)
            Rectangle:
                pos: self.pos
                size: self.size
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height

<StatsPanel>:
    canvas.before:
        Color:
            rgba: (25/255, 100/255, 126/255, 0.8)
        Rectangle:
            pos: self.pos
            size: self.size
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<MainGameScreen>:
    main_game_screen: 'main_game_screen'
    name: 'main_game_screen'
    id: 'main_game_screen'
    on_enter: puzzle.create_grid()
    BoxLayout:
        orientation: 'horizontal'
        #>>>>>>>>>>>>>>>>>>>> LEFT SIDE
        BoxLayout:
            orientation: 'vertical'
            #>>>>>>>>>>>>>>>>>>>>>>>>> GRID
            PuzzleGrid:
                size_hint_y: 80
                id: puzzle
                name: puzzle
                rows: 1

            #>>>>>>>>>>>>>>>>>>>>>>>>> Options Buttons
            BoxLayout:
                id: options
                size_hint_y: 20
                orientation: 'vertical'
                MinorOptionsBox:
                    id: minor_options
                    canvas.before:
                        Color:
                            rgba: 0, 0.8, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Button:
                        on_release: print("nice")
                MajorOptionsBox:
                    id: major_options
                    BoxLayout:
                        orientation: 'vertical'
                        Button:
                            id: pass_turn_btn
                            text: "pass turn"
                            on_release:
                                puzzle.pass_turn()
                        CreateGridButton:
                            id: create_grid_btn
                            text: "create grid"
                            on_release:
                                puzzle.create_grid()

        #>>>>>>>>>>>>>>>>>>>>> RIGHT SIDE
        BoxLayout:
            orientation: 'vertical'
            # >>>>>>>>>>>>>>>>>>>>>>>>> Stats Screen
            BoxLayout:
                orientation: 'vertical'
                id: stats_screen
                size_hint_y: 50
                Label:
                    id: debug_label
                    size_hint_y: 10
                    text: "Actor Stats below (click on actor to check stats)"
                    bgcolor: [0, 0.8, 0.1, 0.6]
                    canvas.before:
                        Color:
                            rgba: self.bgcolor
                        Rectangle:
                            pos: self.pos
                            size: self.size
                StatsPanel:
                    id: stats_panel
                    size_hint_y: 90
                    text: "Stats info here"

            # >>>>>>>>>>>>>>>>>>>>>>>>>> LOG SCREEN
            BoxLayout:
                orientation: 'vertical'
                id: log_screen
                size_hint_y: 50
                Label:
                    size_hint_y: 10
                    text: "Log Information bellow"
                    canvas.before:
                        Color:
                            rgba: (254/255, 94/255, 65/255, 0.5)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                BoxLayout:
                    size_hint_y: 90
                    ScrollableLog:
                        size_hint_x: 95
                        id: log_text
